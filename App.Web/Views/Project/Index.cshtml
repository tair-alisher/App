@model IEnumerable<App.Web.Models.ProjectVM>

@{
    ViewBag.Title = "Проекты";
}

<h2>Проекты</h2>

<p>
    @Html.ActionLink("Добавить проект", "Create")
</p>
<p>
    Отсортировать по:
    <button data-property="title" class="btn btn-secondary active" id="title-sort-btn" onclick="sortProjectListBy('title')">Названию</button>
    <button data-property="customer" class="btn btn-secondary btn-sm" id="customer-sort-btn" onclick="sortProjectListBy('customer')">Заказчику</button>
    <button data-property="performer" class="btn btn-secondary btn-sm" id="performer-sort-btn" onclick="sortProjectListBy('performer')">Исполнителю</button>
    <button data-property="priority" class="btn btn-secondary btn-sm" id="priority-sort-btn" onclick="sortProjectListBy('priority')">Приоритету</button>
    <button data-property="dateStart" class="btn btn-secondary btn-sm" id="dateStart-sort-btn" onclick="sortProjectListBy('dateStart')">Дате начала</button>
    <button data-property="dateEnd" class="btn btn-secondary btn-sm" id="dateEnd-sort-btn" onclick="sortProjectListBy('dateEnd')">Дате окончания</button>
</p>
<p>
    <div class="row">
        <div class="col-md-1">Фильтры:</div>
        <div class="col-md-3">
            <label for="startDate-filter">Дата начала</label>
            <select id="startDate-filter" name="startDate-filter" class="form-control filter" onchange="filterProjectList()">
                <option selected value="">Дата начала</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="priority-filter">Приоритет</label>
            <select id="priority-filter" name="priority-filter" class="form-control filter" onchange="filterProjectList()">
                <option selected value="">Приоритет</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="manager-filter">Руководитель</label>
            <select id="manager-filter" name="manager-filter" class="form-control filter" onchange="filterProjectList()">
                <option selected value="">Руководитель</option>
            </select>
        </div>
    </div>
</p>
<div id="target-div">
    <table class="table table-sm table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Performer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.FullName)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })<br />
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Id })<br />
                    @Html.ActionLink("Сотрудники", "AttachedEmployees", new { id = item.Id })<br />
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
